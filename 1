package Zachet;


import java.util.ArrayList;
import java.util.Scanner;

//        Официант выбирает свободный столик из списка, добавляет заказ (блюда из меню),
//        заказ может добавляться несколько раз на один столик, и может рассчитать столик
//        (вывод суммы заказов и список блюд на столик, столик изменяет статус на свободен)
public class Table {
    static ArrayList<String> dishes = new ArrayList();
    private int price = 0;
    private int table_num = 0;
    private boolean isFree;

    public Table() {
        ++this.table_num;
    }

    public int getTableNum() {
        return table_num;
    }

    public void setisFree(boolean isFree) {
        this.isFree = isFree;
    }

    public boolean getisFree() {
        return isFree;
    }
    public void add_food(){
        setisFree(false);
        Scanner sc = new Scanner(System.in);
        System.out.print("Сколько позиций содержит заказ?");
        int n = Integer.parseInt(sc.nextLine());
        for(int i=0; i<n; i++){
            System.out.print("Введите продукт");
            String dish = sc.nextLine();
            dishes.add(dish);
            System.out.print("Введите цену позиции?");
            int myprice = Integer.parseInt(sc.nextLine());
            price=price + myprice;
        }
    }

    public void clear(){
        setisFree(true);
    }
}
